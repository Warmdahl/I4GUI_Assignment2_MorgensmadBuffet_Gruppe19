@model IEnumerable<Buffet.Models.Guest>

@{
    ViewData["Title"] = "Reseption";
}
    <h1>Reseption</h1>

    <p>
        <a asp-action="Create">Add Guest</a>
        <a asp-action="GuestEatenToday">Guest Eaten Today</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeStatus)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Checked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Checked)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GuestId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GuestId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GuestId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

